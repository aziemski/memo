/* General reset and base styles */
html,
body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    background-color: #f8fafc;
}

/* Utility classes */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 15px;
}

.mt-3 {
    margin-top: 1rem;
}

.mb-4 {
    margin-bottom: 1.5rem;
}

/* Buttons */
.btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    text-align: center;
    border-radius: 0.25rem;
    border: 1px solid transparent;
    cursor: pointer;
}

.btn-primary {
    background-color: #3490dc;
    color: white;
    border-color: #3490dc;
}

.btn-secondary {
    background-color: #6c757d;
    color: white;
    border-color: #6c757d;
}

.btn-danger {
    background-color: #e3342f;
    color: white;
    border-color: #e3342f;
}

.btn-success {
    background-color: #38c172;
    color: white;
    border-color: #38c172;
}

.btn-warning {
    background-color: #ffed4a;
    color: black;
    border-color: #ffed4a;
}

.btn-info {
    background-color: #6cb2eb;
    color: white;
    border-color: #6cb2eb;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
    margin-top: 0;
    margin-bottom: 0.5rem;
}

p {
    margin: 0 0 1rem;
}

/* Forms */
.form-control {
    display: block;
    width: 100%;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    border-radius: 2;
}
